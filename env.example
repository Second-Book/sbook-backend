# Django Settings
# MUST be set. Generate with: uv run python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here

# Database Configuration (PostgreSQL)
# Values match docker-compose.yml defaults
DB_NAME=textbook
DB_USER=textbook
DB_PASSWORD=textbook
DB_HOST=localhost
DB_PORT=10543

# Redis Configuration
# Values match docker-compose.yml defaults (host ports)
REDIS_HOST=localhost
REDIS_PORT=16379

# Frontend Configuration
# CORS allowed origin
FRONTEND_URL=http://localhost:3000

# Debug Mode
# Set to True for development, False for production
DEBUG=True

# Optional: Static and Media Files
# Defaults are set in settings.py if not specified
# STATIC_ROOT=path/to/staticfiles
# MEDIA_ROOT=path/to/media
# MEDIA_HOST=http://127.0.0.1:8000
